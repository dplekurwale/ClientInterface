<!DOCTYPE html>
<html>
  <head>
    <title>CustomerInterface</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class='navbar navbar-inverse'>
      <div class='container-fluid'>
        <div class='navbar-header'>
          <a class='navbar-brand' href='#'>Customer Registration</a>
        </div>
        <% if session[:user_id].nil? %>
          <ul class='nav navbar-nav'>
            <li class='active'>
              <%= link_to 'Sign In', login_user_path %>
            </li>
            <li>
              <%= link_to 'Sign Up', sign_up_user_path %>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to 'Log Out', logout_user_path %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>
    <div class='container-fluid'>
      <div class='row'>
        <% if flash[:notice] %>
          <div class="alert alert-success" role="alert">
            <div class="notice"><%= flash[:notice] %></div>
          </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <div class="notice"><%= flash[:alert] %></div>
          </div>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
